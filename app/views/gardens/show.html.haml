.container
  .row
    .col-md-12
      %p#notice= notice

  .row.jumbotron
    .col-md-7
      = image_tag( @garden.thumb, {class: "img-responsive, img-thumbnail"})

    .col-md-5
      %h2 #{@garden.name}
      %p
        %b Square feet:
        #{@garden.square_feet} feet
      %p
        %b Zone:
        zone #{@garden.zone}
      %p
        %b Garden type:
        = @garden.garden_type

      = link_to '[ Edit info ]', edit_garden_path(@garden)


  .row
    .col-md-12
      %h3 You're growing <span class="plant-count">#{@garden.plants.count}</span> plants:
  .row.plant-cards
    - @garden.plants.each do |plant|
      = render("shared/plants/card", {plant: plant, garden: @garden} )