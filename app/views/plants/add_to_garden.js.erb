// Flash message to user
<% flash.each do |key, message| %>
  $("#flash").append("<%= j( render( partial: "shared/flash_message", locals: {key: key, message: message } ) ) %>");
<% end %>

flashMessageSetTimeout();

// update displayed plant cards
$(".plant-cards").html("<%= j render partial: 'shared/plants/card', collection: @garden.plants, as: :plant, locals: { garden: @garden } %>");

// update the number of plants in the garden
$(".plant-count").html( <%= @garden.plants.size %> )