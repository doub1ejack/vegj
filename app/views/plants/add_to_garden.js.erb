// Flash message to user
<% flash.each do |key, message| %>
  $("#flash").html("<%= j render partial: "shared/flash_message", locals: {key: key, message: message } %>");
<% end %>

// update displayed plant cards
$(".plant-cards").html("<%= j render partial: 'shared/plants/card', collection: @garden.plants, as: :plant, locals: { garden: @garden } %>");